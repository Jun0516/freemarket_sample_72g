.goRootPage
  %h1.goRootPage__icon
    = link_to "/" do
      = image_tag "logo.png",size: '134x36',alt:"FURIMA"

.main
  .done
    .done__info
      .done__info__box
        .done__info__box--icon
          = icon("far", "clock")
        .done__info__box--text
          発送までしばらくおまちください
      .done__info--message
        出品者からの発送通知をお待ちください
    .done__top
      購入が完了しました！
    .done__box
      .done__box__image
        =image_tag("#{@image.image}",size: '150x150')
      .done__box__name
        = @good.name
    .done__price
      = @good.price 
      円(送料込み)
    .done__btn
      =link_to good_path(@good.id), method: :get do
        = submit_tag "商品詳細ページに戻る" ,class: "btn"
    .done__btn
      = link_to user_path(current_user.id), method: :get do
        = submit_tag "マイページに戻る" ,class: "btn"


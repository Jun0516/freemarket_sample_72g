.mypage__side
  %ul.mypage__side__list
    -@contents.each do |content|
      -if content == "マイページ"
        %li.mypage__side--item
          =link_to user_path(current_user), class:"btn item" do
            =content
      -elsif content == "出品する"
        %li.mypage__side--item
          =link_to new_good_path,data: {"turbolinks" => false}, class:"btn item" do
            =content
      -elsif content == "出品した商品-出品中"
        %li.mypage__side--item
          =link_to goods_list_user_path(current_user), class:"btn item" do
            =content
      -elsif content == "出品した商品-売却済み"
        %li.mypage__side--item
          =link_to goods_sale_user_path(current_user), class:"btn item" do
            =content
      -elsif content == "購入した商品-過去の取引"
        %li.mypage__side--item
          =link_to goods_buy_user_path(current_user), class:"btn item" do
            =content
            
      -else
        %li.mypage__side--item
          =link_to "#", class:"btn item" do
            =content

  .mypage__side__option
    設定
  %ul.mypage__side__list
    -@options.each do |option|
      -if option == "ログアウト"
        %li.mypage__side--item
          =link_to user_path(current_user), method: :delete, class:"item" do
            =option
      -elsif option == "支払い方法"
        %li.mypage__side--item
          =link_to new_card_path, class:"item" do
            =option
      -else
        %li.mypage__side--item
          =link_to "#", class:"item" do
            =option